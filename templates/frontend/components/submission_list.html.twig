{% extends '@Forumify/components/list.html.twig' %}
{% block row %}
    <li class="mb-2 flex items-center justify-between">
        <div>
            <p class="mb-1">{{ item.form.name }}</p>
            <p class="text-small">
                {{ 'date_time_short'|trans({ date: item.created_at }) }}
            </p>
        </div>
        {% set status = item.statuses|first %}
        {% if status %}
            {% include '@ForumifyPerscomPlugin/frontend/roster/components/status.html.twig' with {
                status: status,
                class: 'text-small'
            } only %}
        {% endif %}
    </li>
{% endblock %}
{% block empty %}
    {{ 'table.no_entries'|trans }}
{% endblock %}
